        <div class="container">
            <div class="d-sm-flex justify-content-between">
                <div class="my-3">
                    <a href="/blogs/newblog" class='btn btn-secondary btn-lg'><i class="fa fa-plus mr-2"></i>New Post</a>
                </div>
                <div class='lead my-3'>
                    Welcome, <span class="text-bolder text-danger"><%=user.name.toUpperCase()%></span>
                </div>
                <div class="my-3">
                  <a href="/users/logout" class="btn btn-danger">Logout</a>
                </div>
            </div>
        
            <div class="row justify-content-center mb-5">
                
                <% if(blogs.length>0) { %> <% blogs.forEach(blog=> { %>
                        <% if(blog.author===user.name){%>
                            <div class="card mr-2 mb-2 rounded px-0 col-lg-3 col-md-5">
                                <div class="card-header text-bold text-light bg-primary">
                                  <%=blog.title.toUpperCase()%>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%=blog.description%>
                                    </h5>
                                    <span class="text-muted">
                                        <%=blog.created.toLocaleDateString()%>
                                    </span>
                                    <span class="text-muted">
                                        <%=blog.created.toLocaleTimeString()%>
                                    </span>
                                    <p class="card-text">
                                        <%=blog.snippet.slice(0,50)%>&nbsp;&nbsp;&nbsp;<a href="/blogs/<%=blog._id%>" id='<%=blog._id%>' class="ml-auto">Read More...</a>
                                    </p>
                                   
                                </div>
                            </div>
                        <%}%>
                        
                        <% }) %>
                    </div>
            <% } else { %>
                <p>There are no blogs to display...</p>
                <% } %>
        </div>